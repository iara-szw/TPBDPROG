<body>
    <section>
@if(ViewBag.estado=="errorUsuario"){
    <h2 class="error">el nombre de usuario ya esta siendo usado. Intente con otro nombre.</h2>
}
<form action='@Url.Action("registrarNuevo")' method="post">
<p>Nombre de usuario:</p><input type="text" name="nombreUsuarioNuevo" required>
<p>Contraseña:</p><input type="text" name="password" required>
<p>DNI:</p><input type="text" name="DNI" MaxLength="8" required>
<p>Nombre completo:</p><input type="text" name="nombreCompleto" required>
<p>Fecha de nacimiento:</p><input type="date" name="fechaNacimiento" required>
<p>Canción favorita:</p><input type="text" name="cancionFav" required>
<p>Libro favorito:</p><input type="text" name="libroFav" required>

<input type="submit" value="Registrarse">
</form>
</section>
<div>
<a href='@Url.Action("iniciarSesion")' method="post" class="iniciarSesion">Iniciar Sesión</a>
</div>




</body>
